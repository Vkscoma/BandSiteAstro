---
export interface Props {
	title: string;
}

const pageTitle = "Hotel Garden Band";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Music from "../components/Music.astro";
import Shows from "../components/Shows.astro";
import About from "../components/About.astro";
import Form from "../components/Form.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{pageTitle}</title>
		<meta name="description" content="Hotel Garden Band Website" />
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#131820" />
		<!-- Font Awesome-->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
			integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
		<!--Favicon-->
		<link rel="shortcut icon" href="images/hgfavicon.png" />
		<!-- Font Family -->
		<!-- Favicon -->
		<link rel="icon" href="/images/HOTELGARDENFavicon.svg" />
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap");

			* {
				box-sizing: border-box;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: "Outfit", sans-serif;
				color: #f2f2f2;
				animation: fadeInAnimation ease 1s;
			}

			@keyframes fadeInAnimation {
				0% {
					opacity: 0;
				}

				100% {
					opacity: 1;
				}
			}
		</style>
	</head>
	<body>
		<Navbar />
		<slot />
		<Music />
		<Shows />
		<About />
		<Form />
		<Footer />
	</body>
</html>
