---
import Layout from "../layouts/Layout.astro";

const socialMediaItems = [
	{
		name: "Instagram",
		link: "https://www.instagram.com/hotelgardenband/",
		icon: "fa-brands fa-instagram nav-icon-class",
	},
	{
		name: "TikTok",
		link: "https://www.tiktok.com/@hotelgardenband",
		icon: "fa-brands fa-tiktok nav-icon-class",
	},
	{
		name: "Spotify",
		link: "https://open.spotify.com/artist/33YRDb38CEI0aA2TS5csdx?si=1uYMovQbQpG7uSgqTJB5-g",
		icon: "fa-brands fa-spotify nav-icon-class",
	},
	{
		name: "Apple Music",
		link: "https://music.apple.com/us/artist/hotel-garden/1648459007",
		icon: "fa-brands fa-apple nav-icon-class",
	},
	{
		name: "YouTube",
		link: "https://www.youtube.com/channel/UCLW6HCmYLTbe_Je8Q63-PMQ",
		icon: "fa-brands fa-youtube nav-icon-class",
	},
];
---

<Layout title="Hotel Garden Band">
	<section id="home" class="py-64">
		<div class="flex flex-col justify-center">
			<h1 class="band--logo text-7xl md:text-9xl text-center text-white">
				HOTEL <br />GARDEN
			</h1>
			<ul class="flex justify-center mt-8 gap-2">
				{
					socialMediaItems.map((item) => {
						return (
							<li class="text-3xl text-light hover:text-secondary transition ease-in-out duration-250 hover:ease-in-out">
								<a
									href={item.link}
									target="_blank"
									rel="noopener noreferrer">
									<i class={item.icon} />
								</a>
							</li>
						);
					})
				}
			</ul>
		</div>
	</section>
</Layout>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap");
	body {
		background-image: url("https://static.pexels.com/photos/414171/pexels-photo-414171.jpeg");
		background-size: cover;
		-webkit-animation: slidein 100s;
		animation: slidein 100s;

		-webkit-animation-fill-mode: forwards;
		animation-fill-mode: forwards;

		-webkit-animation-iteration-count: infinite;
		animation-iteration-count: infinite;

		-webkit-animation-direction: alternate;
		animation-direction: alternate;
	}

	@-webkit-keyframes slidein {
		from {
			background-position: top;
			background-size: 3000px;
		}
		to {
			background-position: -100px 0px;
			background-size: 2750px;
		}
	}

	@keyframes slidein {
		from {
			background-position: top;
			background-size: 3000px;
		}
		to {
			background-position: -100px 0px;
			background-size: 2750px;
		}
	}
	.band--logo {
		font-family: "Montserrat", sans-serif;
		font-weight: 800;
		text-shadow: 0 0 10px rgba(255, 255, 255, 0.7);
	}

	#home {
